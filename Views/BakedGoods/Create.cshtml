@model BAKERY_WEB_APPLICATION.Models.BakedGood

@{
    <!-- Title of the tab. -->
    ViewData["Title"] = "Create Goods";
}

<!-- Header. -->
<h1>Add a New Baked Good</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <!-- For input of name of baked good. -->
            <div class="form-group">
                <label asp-for="bakedGoodName" class="control-label">Name of Baked Good</label>
                <input asp-for="bakedGoodName" class="form-control" />
                <span asp-validation-for="bakedGoodName" class="text-danger"></span>
            </div>
            <!-- For input of the type of pastry. -->
            <div class="form-group">
                <label asp-for="typeOfPastry" class="control-label">Type of Pastry</label>
                <input asp-for="typeOfPastry" class="form-control" />
                <span asp-validation-for="typeOfPastry" class="text-danger"></span>
            </div>
            <!-- For input of the price of a single unit of a baked good. -->
            <div class="form-group">
                <label asp-for="pricePerUnit" class="control-label">Price per Unit ($)</label>
                <input asp-for="pricePerUnit" class="form-control" />
                <span asp-validation-for="pricePerUnit" class="text-danger"></span>
            </div>
            <!-- A tick. Checked when available and not checked when item is not avaiable. -->
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="availableOrNot" /> Available
                </label>
            </div>
            <!-- Create button. Creates the baked good when clicked. -->
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<!-- Will go back to the list of baked goods if clicked. -->
<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
