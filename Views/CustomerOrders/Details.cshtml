@model BAKERY_WEB_APPLICATION.Models.CustomerOrder

@{
    <!-- Title of the tab. -->
    ViewData["Title"] = "Details about Customer Orders";
}

<!-- Header. -->
<h1>Customer Order Details</h1>

<!-- Display the details of a customer order. -->
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Customer Name
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.customerName)
        </dd>
        <dt class="col-sm-2">
            Description (goods wanted and additional details)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.description)
        </dd>
        <dt class="col-sm-2">
            Phone Number
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.customerPhoneNumber)
        </dd>
        <dt class="col-sm-2">
            Total ($)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.orderAmount)
        </dd>
        <dt class="col-sm-2">
            Order Fulfilled
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.completedOrNot)
        </dd>
    </dl>
</div>

<!-- Links to click. Edit to confirm edits. Index to go back to the list of customer's orders. -->
<div>
    <a asp-action="Edit" asp-route-id="@Model.orderID">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
