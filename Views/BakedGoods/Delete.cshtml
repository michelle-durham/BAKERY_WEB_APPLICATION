@model BAKERY_WEB_APPLICATION.Models.BakedGood

@{
    <!-- Title of the tab. -->
    ViewData["Title"] = "Delete Goods";
}

<!-- Header. -->
<h1>Delete a Baked Good</h1>

<h3>Are you sure you want to delete this item?</h3>

<!-- Display the details of the baked goods. -->
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Name of Baked Good
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.bakedGoodName)
        </dd>
        <dt class="col-sm-2">
            Type of Pastry
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.typeOfPastry)
        </dd>
        <dt class="col-sm-2">
            Price per Unit ($)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.pricePerUnit)
        </dd>
        <dt class="col-sm-2">
            Available
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.availableOrNot)
        </dd>
    </dl>

    <!-- Delete button. When clicked, will delete the selected baked good. -->
    <form asp-action="Delete">
        <input type="hidden" asp-for="bakedGoodID" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index">Back to List</a>
    </form>
</div>
