@model BAKERY_WEB_APPLICATION.Models.CustomerOrder

@{
    <!-- Title of the tab. -->
    ViewData["Title"] = "Delete Customer Orders";
}

<!-- Header. -->
<h1>Delete Customer Order</h1>

<h3>Are you sure you want to delete this?</h3>

<!-- Display the details of the customer's orders. -->
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Customer Order
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.customerName)
        </dd>
        <dt class="col-sm-2">
            Description (goods wanted and additional details)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.description)
        </dd>
        <dt class="col-sm-2">
            Phone Number
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.customerPhoneNumber)
        </dd>
        <dt class="col-sm-2">
            Total ($)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.orderAmount)
        </dd>
        <dt class="col-sm-2">
            Order Fulfilled
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.completedOrNot)
        </dd>
    </dl>

    <!-- Delete button. When clicked, will delete the selected customer order. -->
    <form asp-action="Delete">
        <input type="hidden" asp-for="orderID" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index">Back to List</a>
    </form>
</div>
